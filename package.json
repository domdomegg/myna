{
  "scripts": {
    "production": "cross-env NODE_ENV=production npm run tailwind:build && hugo",
    "start": "cross-env NODE_ENV=development concurrently \"npm run tailwind:watch\" \"hugo server\"",
    "tailwind:build": "./node_modules/tailwindcss/lib/cli.js -i ./static/tailwind.css -o ./static/main.css --content ./content/**/*.html,./layouts/**/*.html --minify",
    "tailwind:watch": "./node_modules/tailwindcss/lib/cli.js -i ./static/tailwind.css -o ./static/main.css --content ./content/**/*.html,./layouts/**/*.html -w"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23"
  }
}
